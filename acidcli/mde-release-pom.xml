<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.altran.acidcli.mde</groupId>
  <artifactId>com.altran.acidcli.mde.release</artifactId>
  <name>ACIDCLI - Release MDE Repository</name>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <!-- This is the latest Tycho version that supports Java8 -->
    <!-- See https://wiki.eclipse.org/Tycho/Release_Notes -->
    <tycho.version>1.7.0</tycho.version>

    <!-- This property will be overwritten by the merge-p2-repository profile if active -->
    <acidcli.p2.deployDir>${acidcli.repository.localDir}/repository</acidcli.p2.deployDir>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.2</version>
          <configuration>
            <!-- We do not want to install this pom into the local repository -->
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.2</version>
          <configuration>
            <!-- We do not want to deploy this pom to the remote repository -->
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>wagon-maven-plugin</artifactId>
          <version>2.0.0</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-maven-plugin</artifactId>
          <version>${tycho.version}</version>
          <extensions>true</extensions>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho.extras</groupId>
          <artifactId>tycho-p2-extras-plugin</artifactId>
          <version>${tycho.version}</version>
        </plugin>
        <plugin>
          <!-- This plugin is only used for debugging purposes -->
          <groupId>com.soebes.maven.plugins</groupId>
          <artifactId>echo-maven-plugin</artifactId>
          <version>0.4.0</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>com.soebes.maven.plugins</groupId>
        <artifactId>echo-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>echo-release-properties</id>
            <phase>validate</phase>
            <goals>
              <goal>echo</goal>
            </goals>
            <configuration>
              <echos>
                <echo>Local repository directory: ${acidcli.repository.localDir}</echo>
                <echo>Deploy P2-repository directory: ${acidcli.p2.deployDir}</echo>
                <echo>Remote repository URI: ${acidcli.repository.remoteUri}</echo>
              </echos>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <!-- Bug 512198 - tycho-p2-extras-plugin:publish-features-and-bundles does not update xz meta-data -->
        <!-- https://bugs.eclipse.org/bugs/show_bug.cgi?id=512198 -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0-M3</version>
        <executions>
          <execution>
            <id>enforce-no-xz-compression</id>
            <phase>validate</phase>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireFilesDontExist>
                  <files>
                    <file>${acidcli.repository.localDir}/repository/artifacts.xml.xz</file>
                    <file>${acidcli.repository.localDir}/repository/content.xml.xz</file>
                  </files>
                  <message>Found XZ compressed repository index files in the local P2 repository, this is not supported. Please disable XZ compression for repository index files in the Maven pom, also see https://www.eclipse.org/tycho/sitedocs/tycho-p2/tycho-p2-repository-plugin/assemble-repository-mojo.html#xzCompress</message>
                </requireFilesDontExist>
                <requireFilesDontExist>
                  <files>
                    <file>${acidcli.p2.mergeDir}/artifacts.xml.xz</file>
                    <file>${acidcli.p2.mergeDir}/content.xml.xz</file>
                  </files>
                  <message>Found XZ compressed repository index files in the remote P2 repository, this is not supported. Please remove artifacts.xml.xz, content.xml.xz and p2.index from the remote repository, also see https://www.eclipse.org/tycho/sitedocs/tycho-p2/tycho-p2-repository-plugin/assemble-repository-mojo.html#xzCompress</message>
                </requireFilesDontExist>
              </rules>
              <fail>true</fail>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>release-p2-repository</id>
            <phase>deploy</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <serverId>acidspace-repository-manager</serverId>
              <url>${acidcli.repository.remoteUri}/repository</url>
              <fromDir>${acidcli.p2.deployDir}</fromDir>
              <includes>**/*</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <!-- Merges the built P2 repository at acidcli.repository.localDir -->
      <!-- into the downloaded P2 repository at acidcli.p2.mergeDir and -->
      <!-- set acidcli.p2.mergeDir as the directory to be uploaded to Nexus -->
      <id>merge-p2-repository</id>
      <activation>
        <property>
          <name>acidcli.p2.mergeDir</name>
        </property>
        <file>
          <exists>${acidcli.p2.mergeDir}</exists>
        </file>
      </activation>
      <properties>
        <acidcli.p2.deployDir>${acidcli.p2.mergeDir}</acidcli.p2.deployDir>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>com.soebes.maven.plugins</groupId>
            <artifactId>echo-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>echo-merge-properties</id>
                <phase>validate</phase>
                <goals>
                  <goal>echo</goal>
                </goals>
                <configuration>
                  <echos>
                    <echo>Merge repository directory: ${acidcli.p2.mergeDir}</echo>
                  </echos>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-p2-extras-plugin</artifactId>
            <executions>
              <execution>
                <id>merge-p2-repository</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>mirror</goal>
                </goals>
                <configuration>
                  <source>
                    <repository>
                      <id>acidspace-repository-manager</id>
                      <url>${acidcli.repository.localUri}/repository</url>
                      <layout>p2</layout>
                    </repository>
                  </source>
                  <destination>${acidcli.p2.mergeDir}</destination>
                  <followStrictOnly>true</followStrictOnly>
                  <append>true</append>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <!-- If Eclipse RCPs (products) are found, also upload them to Nexus -->
      <id>release-products</id>
      <activation>
        <file>
          <exists>${acidcli.repository.localDir}/products</exists>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>wagon-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>release-products</id>
                <phase>deploy</phase>
                <goals>
                  <goal>upload</goal>
                </goals>
                <configuration>
                  <serverId>acidspace-repository-manager</serverId>
                  <url>${acidcli.repository.remoteUri}/products</url>
                  <fromDir>${acidcli.repository.localDir}/products</fromDir>
                  <includes>*.*</includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>